{
  "name": "jwt-auth-service",
  "version": "1.0.0",
  "description": "Node.js microservice with OpenAPI v3 specs for authentication using JWT tokens on a MySQL backend",
  "main": "build/index.js",
  "engines": {
    "node": ">= 14.15.5",
    "npm": ">= 6.14.11"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "date-fns": "^2.27.0",
    "db-migrate": "^0.11.12",
    "db-migrate-mysql": "^2.1.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-openapi-validator": "^4.12.14",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.3.0",
    "swagger-express-validator": "^1.0.2",
    "swagger-ui-dist": "^3.51.0",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^8.3.2",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@apidevtools/swagger-cli": "^4.0.4",
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.23",
    "@types/js-yaml": "^4.0.1",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/node": "^15.12.5",
    "@types/swagger-express-validator": "^0.0.0",
    "@types/swagger-ui-dist": "^3.30.0",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.0",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "cli-glob": "^0.1.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^6.0.0",
    "jest": "27.0.5",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "4.3.4"
  },
  "lint-staged": {
    "**/*": [
      "prettier --write --ignore-unknown",
      "eslint ."
    ]
  },
  "scripts": {
    "db:setup": "bash migrations/setup/setup.sh",
    "docker:volumes:up": "docker volume create --name=mysql-volume",
    "docker:volumes:down": "docker volume rm mysql-volume",
    "docker:up": "npm run docker:volumes:up && docker-compose up --build -d",
    "docker:down": "docker-compose down -v --remove-orphans",
    "docker:clean": "npm run docker:down && npm run docker:volumes:down",
    "bundle:api": "swagger-cli bundle -t yaml -o build/api/api-spec.yaml src/api/api-spec.yaml",
    "build": "rimraf ./build && npm run bundle:api && tsc",
    "migration:create": "db-migrate --config migrations/db-migrate.json create",
    "migration:apply": "db-migrate --config migrations/db-migrate.json up",
    "migration:apply:stage": "db-migrate --config migrations/db-migrate.json -e stage up",
    "migration:apply:prod": "db-migrate --config migrations/db-migrate.json -e prod up",
    "migration:undo": "db-migrate --config migrations/db-migrate.json down",
    "start": "node -r dotenv/config build/index.js",
    "start-dev": "nodemon",
    "test": "lerna run test --stream",
    "test:ci": "lerna run test:ci --stream",
    "lint": "eslint . && npm run lint:spec",
    "lint:spec": "glob '**/src/**/api-spec.yaml' | xargs -n1 npx swagger-cli validate",
    "lint:fix": "lerna run lint:fix --stream",
    "pretest": "jest --clearCache",
    "prettier:format": "prettier --write .",
    "prettier:verify": "prettier --check ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
